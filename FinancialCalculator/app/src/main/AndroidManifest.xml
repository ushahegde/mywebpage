<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hegdeapps.financecalc"
    android:installLocation="preferExternal">
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:supportsRtl="true" >

        <activity
            android:name=".Main2Activity"
            android:theme="@style/AppTheme"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SimpleInterest"
            android:configChanges="orientation|screenSize|keyboard"
            android:parentActivityName=".Main2Activity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Main2Activity" />
        </activity>
        <activity
            android:name=".SavingsGoalActivity"
            android:configChanges="orientation|screenSize|keyboard"
            android:parentActivityName=".Main2Activity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="Main2Activity" />
        </activity>
        <activity
            android:name=".CalculateEMI"
            android:label="EMI"
            android:configChanges="orientation|screenSize|keyboard"
            android:parentActivityName=".Main2Activity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="Main2Activity" />
        </activity>
        <activity
            android:name=".RDCalculator"
            android:configChanges="orientation|screenSize|keyboard"
            android:parentActivityName=".Main2Activity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="Main2Activity" />
        </activity>
        <activity
            android:name=".GratuityCalculator"
            android:configChanges="orientation|screenSize|keyboard"
            android:parentActivityName=".Main2Activity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Main2Activity" />
        </activity>

        <activity
            android:name=".FDCalculator"
            android:configChanges="orientation|screenSize|keyboard"
            android:parentActivityName=".Main2Activity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Main2Activity" />
        </activity>



        <activity
            android:name=".LoanAffordability"
            android:configChanges="orientation|screenSize|keyboard"
            android:parentActivityName=".Main2Activity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="Main2Activity" />
        </activity>
    </application>
</manifest>