<resources>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/darkcyan</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/very_light_gray</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@android:transition/slide_right</item>
        <item name="android:windowExitTransition">@android:transition/slide_left</item>

    </style>
    <style name="Theme2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">#EA7373</item>
        <item name="colorPrimaryDark">#754646</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/very_light_gray</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@android:transition/slide_right</item>
        <item name="android:windowExitTransition">@android:transition/slide_left</item>

    </style>
    <!-- <style name="my_material_style" parent="@android:style/Theme.Material.NoActionBar" />
-->
<style name="myactionbar" parent="ThemeOverlay.MaterialComponents.ActionBar">
    <item name="colorControlNormal">@color/white</item>
    <item name="android:elevation">5dp</item>
</style>



</resources>
