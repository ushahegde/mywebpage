<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:layout_margin="15dp"

    android:background="@color/white"
    android:elevation="3dp"
    android:orientation="vertical"
    android:padding="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_margin="5dp"
            android:gravity="center"
            android:text="Amount"
             />

        <EditText
            android:id="@+id/amount1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"

            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"

            android:layout_weight="1"
            android:ems="4"
            android:hint="amount1"
            android:inputType="number"
            android:maxEms="4"
            android:maxLength="10"
            android:padding="5dp" />

        <EditText
            android:id="@+id/amount2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_marginEnd="15dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:hint="amount2"
            android:inputType="number"
            android:maxLength="10"
            android:padding="5dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_marginRight="10dp"
            android:text="Bank  "
             />

        <Spinner
            android:id="@+id/bankname1"
            style="@style/Widget.AppCompat.Spinner.DropDown"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:backgroundTint="#55ffffff"
            android:entries="@array/bankNames"></Spinner>

        <Spinner
            android:id="@+id/bankname2"
            style="Widget.Material.Spinner.Underlined"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:entries="@array/bankNames"
            android:maxLength="10"
            android:minEms="7"></Spinner>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="Rate %"
             />

        <EditText
            android:id="@+id/rate1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="rate1"
            android:inputType="numberDecimal"
            android:maxLength="5"
            android:padding="5dp" />

        <EditText
            android:id="@+id/rate2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="rate2"
            android:inputType="numberDecimal"
            android:maxLength="5"
            android:padding="5dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duration"
             />

        <Spinner
            android:id="@+id/period_type_cmp"
            style="@android:style/Widget.Material.Spinner.Underlined"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/period_type" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/transparent"
            android:text="duration " />

        <EditText
            android:id="@+id/period1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="2"
            android:hint="duration1"
            android:inputType="number"
            android:maxLength="3"
            android:padding="5dp"
            android:text="1" />

        <EditText
            android:id="@+id/period2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:ems="2"
            android:hint="duration2"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:maxLength="3"
            android:padding="5dp"
            android:text="1" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/isSenior"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:text="Senior Citizen"
        android:textColor="@color/black"
        android:textSize="14sp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bordered_bg"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Type   "
             />

        <Spinner
            android:id="@+id/interest_payable"
            style="@android:style/Widget.Material.Spinner.Underlined"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:entries="@array/type_of_fd" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/calculate_compare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:backgroundTint="@color/cell_color"
            android:text="Calculate" />

        <TextView
            android:id="@+id/matAmountlabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Maturity Amount"

            android:textColor="@color/colorPrimary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/matAmount1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/bordered_bg"
                android:gravity="center"
                android:padding="5dp"
                android:text=" "

                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/matAmount2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/bordered_bg"
                android:gravity="center"
                android:padding="5dp"
                android:text=" "

                android:textColor="@color/colorPrimary" />
        </LinearLayout>

        <TextView
            android:id="@+id/interestlabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Interest"
            android:textColor="@color/colorPrimary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/interest1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/bordered_bg"
                android:gravity="center"
                android:padding="5dp"
                android:text=" "
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/interest2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/bordered_bg"
                android:gravity="center"
                android:padding="5dp"
                android:text=" "
                android:textColor="@color/colorPrimary" />
        </LinearLayout>
    </LinearLayout>



</LinearLayout>